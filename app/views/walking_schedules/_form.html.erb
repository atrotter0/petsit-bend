<%= render 'shared/errors', obj: @schedule %>

  <div class="form-container medium-form-width">
    <div class="row">
      <div class="col-xs-12">
        <div class="pet-select">
          <p>Select Pets:</p>
          <% current_user.pets.each_with_index do |pet, index| %>
            <div class="pet-select-item">
              <%= pet.name %>
              <button class="btn btn-primary btn-med btn-add-time btn-mobile-friendly" id="<%= index %>-btn-add-pet">
                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
              </button>
            </div>
          <% end %>
        </div>
        <%= render 'day_select' %>
        </div>


        <%= form_for(@schedule, :html => { class: 'form-horizontal', role: 'form' }) do |f| %>
        <% if current_user.admin? %>
            <div class="form-group">
              <%= f.label :user_list, 'User', class: 'label-style' %>
              <select multiple="multiple" id="user-list" name="user_list[]">
                <% User.all.each do |user| %>
                  <option><%= user_name_and_id(user) %></option>
                <% end %>
              </select>
            </div>
        <% end %>
          <div class="form-group">
            <%= f.label :pet_list, class: 'label-style' %>
            <%= f.text_field :pet_list, class: 'form-control', placeholder: "Pet List" %>
          </div>
          <div class="form-group">
            <%= f.submit(@schedule.new_record? ? "Add Schedule" : "Update Schedule", class: 'btn btn-primary btn-lg') %>
            <%= link_to 'Back', walking_schedules_path, class: "btn btn-lg btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
