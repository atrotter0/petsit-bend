  <% provide(:title, "Resend Account Activation Link") %>
  <div class="form-container small-form-width">
    <div class="row">
      <div class="col-xs-12">
        <%= form_for(:account_activations, url: account_activations_path, :html => { class: 'form-horizontal', role: 'form' }) do |f| %>
          <div class="form-group">
            <%= f.label :email, class: 'label-style' %>
            <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
          </div>
          <div class="form-group">
            <%= f.submit "Submit", class: "btn btn-lg btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
