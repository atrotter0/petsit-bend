<div class="content">
  <h1 align="center">Reset Password</h1>

  <%= render 'shared/errors', obj: @user %>

  <div class="form-container small-form-width">
    <div class="row">
      <div class="col-xs-12">
        <%= form_for(@user, url: password_reset_path(params[:id]), :html => { class: 'form-horizontal', role: 'form' }) do |f| %>
          <%= hidden_field_tag :email, @user.email %>
          <div class="form-group">
            <%= f.label :password, class: 'label-style' %>
            <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, 'Confirm', class: 'label-style' %>
            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Retype Password' %>
          </div>
          <div class="form-group">
            <%= f.submit "Update Password", class: "btn btn-lg btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
