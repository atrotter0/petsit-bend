<div class="content">
  <h1 align="center">Log In</h1>
  <div class="form-container small-form-width">
    <div class="row">
      <%= form_for(:session, :html => { class: 'form-horizontal', role: 'form' }, url: login_path) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: 'label-style' %>
          <%= f.text_field :email, class: 'form-control', autofocus: true %>
        </div>
        <div class="form-group">
          <%= f.label :password, class: 'label-style' %>
          <%= f.password_field :password, class: 'form-control', autocomplete: 'off' %><br/>
          <%= link_to "Forgot password?", new_password_reset_path %><br/><br/>
          <%= link_to "Resend Account Activation Email", new_account_activation_path %>
        </div>
        <div class="form-group">
          <%= f.submit "Log in", class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>