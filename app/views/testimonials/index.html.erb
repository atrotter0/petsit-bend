<div class="content">
  <h1 align="center">Testimonials</h1>
  <% if logged_in? && current_user.testimonial.blank? %>
    <div class="data-content">
      <a href="<%= new_testimonial_path %>" class="btn btn-lg btn-primary">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Add Testimonial
      </a>
    </div>
    <% if @testimonials.empty? %>
      <div class="data-content">
        No Testimonials at this time. Check back soon!
      </div>
    <% end %>
  <% end %>
  <div class="data-container">
    <div class="data-content testimonial">
      <% @testimonials.each do |testimonial| %>
        <div class="testimonial-image-box">
          <img src="assets/paw-print.jpg" id="testimonial-image" class="img-circle">
        </div>
        <div class="testimonial-content-box">
          <div class="testimonial-name-box">
            <%= "#{testimonial.user.last_name} Family & Pets" %>
          </div>
          <div class="testimonial-body-box">
            "<%= testimonial.body %>"
          </div>
          <% if logged_in? && current_user.admin? %>
            <div class="testimonial-options">
              <%= link_to 'View', testimonial_path(testimonial), class: "btn btn-med btn-primary" %>
              <%= link_to 'Edit', edit_testimonial_path(testimonial), class: "btn btn-med btn-primary" %>
              <%= link_to 'Delete', testimonial_path(testimonial), method: :delete,
                data: { confirm: "Are you sure you want to delete this testimonial?" },
                  class: "btn btn-med btn-primary" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
