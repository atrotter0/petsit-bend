<%= render 'shared/errors', obj: @testimonial %>

  <div class="form-container">
    <div class="row">
      <div class="col-xs-12">
        <%= form_for(@testimonial, :html => { class: 'form-horizontal', role: 'form' }) do |f| %>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :body, 'Testimonial' %>
            </div>
            <div class="col-sm-8">
              <%= f.text_area :body, class: 'form-control', placeholder: "Type your testimonial here" %>
            </div>
          </div>
          <% if current_user.admin? %>
            <div class="form-group">
              <div class="control-label col-sm-2">
                <%= f.label :approved, 'Approved?', id: 'radio-label' %>
              </div>
              <div class="col-sm-8" id="radio-box">
                <%= f.label :approved, 'Yes' %>
                <%= f.radio_button :approved, 'true' %>
                <%= f.label :approved, 'No' %>
                <%= f.radio_button :approved, 'false'%>
              </div>
            <% end %>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit(@testimonial.new_record? ? "Submit Testimonial" : "Update Testimonial", class: 'btn btn-primary btn-med') %>
              <%= link_to 'Back', testimonials_path, class: "btn btn-med btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
