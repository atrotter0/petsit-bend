<%= render 'shared/errors', obj: @testimonial %>

  <div class="form-container medium-form-width">
    <div class="row clearfix">
      <div class="col-xs-12">
        <%= form_for(@testimonial) do |f| %>
          <div class="form-group">
            <%= f.text_area :body, class: 'form-control', placeholder: "Tell others about your experience!", rows: 10 %>
            <div id="testimonials-count">0 / 800 characters</div>
          </div>
          <% if logged_in? && current_user.admin? %>
            <div class="form-group">
              <%= f.label :approved, 'Approved?', class: 'label-style', id: 'radio-label' %>
              <div id="radio-box">
                <%= f.label :approved, 'Yes' %>
                <%= f.radio_button :approved, 'true' %>
                <%= f.label :approved, 'No' %>
                <%= f.radio_button :approved, 'false'%>
              </div>
              <div class="form-group">
                <%= f.label :first_name_override, 'First Name Override', class: 'label-style' %>
                <%= f.text_field :first_name_override, class: 'form-control'%>
              </div>
              <div class="form-group">
                <%= f.label :last_name_override, 'Last Name Override', class: 'label-style' %>
                <%= f.text_field :last_name_override, class: 'form-control'%>
              </div>
              <div class="form-group">
                <%= f.label :date_override, 'Date Override', class: 'label-style' %>
                <%= f.text_field :date_override, class: 'form-control'%>
              </div>
              <div class="form-group">
                <%= f.label :external_url, 'External Url', class: 'label-style' %>
                <%= f.text_field :external_url, class: 'form-control'%>
              </div>
            </div>
            <% end %>
          <div class="form-group">
            <%= f.submit(@testimonial.new_record? ? "Submit Testimonial" : "Update Testimonial", class: 'btn btn-primary btn-lg') %>
            <%= link_to 'Back', testimonials_path, class: "btn btn-lg btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
