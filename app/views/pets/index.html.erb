<div class="content">
  <h1 align="center">Pets</h1>
  <div class="data-content">
    <a href="<%= new_pet_path %>" class="btn btn-lg btn-primary">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      Add Pet
    </a>
  </div>
  <div class="data-container">
    <% if current_user.pets.present? || current_user.admin? %>
      <div class="data-header">
        <ul class="ul-list">
          <li class="li-list"><div class="data-icon"><img src="assets/users.jpg" id="icon" class="img-circle"></div></li>
          <li class="li-list"><div class="data-icon"><img src="assets/pets.jpg" id="icon" class="img-circle"></div></li>
          <li class="li-list"><div class="data-icon"><img src="assets/options.jpg" id="icon" class="img-circle"></div></li>
        </ul>
      </div>
      <div class="data-content">
        <% if current_user.admin? %>
          <%= render 'admin/pets_index.html.erb' %>
        <% else %>
          <% current_user.pets.each do |pet| %>
            <ul class="ul-list">
              <li class="li-list"><%= pet.user.first_name + ' ' + pet.user.last_name %></li>
              <li class="li-list"><%= pet.name %></li>
              <li class="li-list">
                <%= link_to 'View', pet_path(pet), class: "btn btn-med btn-primary" %>
                <%= link_to 'Edit', edit_pet_path(pet), class: "btn btn-med btn-primary" %>
                <%= link_to 'Delete', pet_path(pet), method: :delete,
                  data: { confirm: "Are you sure you want to delete this pet?" },
                    class: "btn btn-med btn-primary" %>
              </li>
            </ul>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
