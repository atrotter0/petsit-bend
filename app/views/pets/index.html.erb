<div class="content">
  <h1 align="center">Pets</h1>
  <div class="data-content">
    <a href="<%= new_pet_path %>" class="btn btn-lg btn-primary" title="Add Pet">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      Add Pet
    </a>
  </div>
  <div class="data-container">
    <div class="data-content clearfix">
      <% @pets.each do |pet| %>
        <div class="page-data-box block-width-small">
          <div class="page-item-box">
            <p class="page-content-header">Pet ID: <%= pet.id %></p>
            <% if current_user.admin? %>
              <p class="page-content"><img src="https://s3.amazonaws.com/petsit-bend/users.jpg" class="info-icon"><%= full_user_name(pet) %></p>
            <% end %>
            <p class="page-content"><img src="https://s3.amazonaws.com/petsit-bend/pets.jpg" class="info-icon"><%= pet.name %></p>
            <p class="page-content">
              <img src="https://s3.amazonaws.com/petsit-bend/options.jpg" class="info-icon">
              <%= link_to 'View', pet_path(pet), class: "btn btn-med btn-primary" %>
              <%= link_to 'Edit', edit_pet_path(pet), class: "btn btn-med btn-primary" %>
              <%= link_to 'Delete', pet_path(pet), method: :delete,
                data: { confirm: "Are you sure you want to delete this pet?" },
                  class: "btn btn-med btn-primary" %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="paginate-box center">
      <%= will_paginate %>
    </div>
  </div>
</div>
