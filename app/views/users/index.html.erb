<div class="content">
  <h1 align="center">Users</h1>
  <div class="data-container">
    <div class="data-header">
      <ul class="ul-list">
        <li class="li-list"><div class="data-icon"><img src="https://s3.amazonaws.com/petsit-bend/users.jpg" id="icon" class="img-circle" alt="Users icon"></div></li>
        <li class="li-list"><div class="data-icon"><img src="https://s3.amazonaws.com/petsit-bend/reservations.jpg" id="icon" class="img-circle" alt="Reservations icon"></div></li>
        <li class="li-list"><div class="data-icon"><img src="https://s3.amazonaws.com/petsit-bend/options.jpg" id="icon" class="img-circle" alt="Options icon"></div></li>
      </ul>
    </div>
    <div class="data-content">
      <% @users.each do |user| %>
        <ul class="ul-list">
          <li class="li-list">
            <div class="data-icon-list-box">
              <div class="data-date-check-box">
                <span><img src="https://s3.amazonaws.com/petsit-bend/pets.jpg" class="info-icon" alt="User pet icon"></span>
                <% if user.pets.present? %>
                  <span class="tooltiptext"><%= pet_names_for_user(user) %></span>
                <% else %>
                  <span class="tooltiptext">None</span>
                <% end %>
              </div>
              <div class="data-date-check-box">
                <span><img src="https://s3.amazonaws.com/petsit-bend/timestamp.jpg" class="info-icon" alt="User last login timestamp icon"></span>
                 <% if user.last_login.present? %>
                  <span class="tooltiptext"><%= user.last_login %></span>
                <% else %>
                  <span class="tooltiptext">None</span>
                <% end %>
              </div>
              <div class="data-date-check-box">
                <span><img src="https://s3.amazonaws.com/petsit-bend/users.jpg" class="info-icon"></span>
                <span class="tooltiptext"><%= user.first_name + ' ' + user.last_name %></span>
              </div>
            </div>
          </li>
          <li class="li-list"><%= user.email %></li>
          <li class="li-list">
            <%= link_to 'View', user_path(user), class: "btn btn-med btn-primary" %>
            <%= link_to 'Edit', edit_user_path(user), class: "btn btn-med btn-primary" %>
            <%= link_to 'Delete', user_path(user), method: :delete,
                data: { confirm: "Are you sure you want to delete this user?" },
                  class: "btn btn-med btn-primary" %>
          </li>
        </ul>
      <% end %>
      <div class="paginate-box">
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>
