<div class="content">
  <h1 align="center">Users</h1>
  <div class="data-container">
    <div class="data-header">
      <ul class="ul-list">
        <li class="li-list"><div class="data-icon"><img src="assets/users.jpg" id="icon" class="img-circle"></div></li>
        <li class="li-list"><div class="data-icon"><img src="assets/reservations.jpg" id="icon" class="img-circle"></div></li>
        <li class="li-list"><div class="data-icon"><img src="assets/options.jpg" id="icon" class="img-circle"></div></li>
      </ul>
    </div>
    <div class="data-content">
      <% @users.each do |user| %>
        <ul class="ul-list">
          <li class="li-list">
            <div class="data-date-check-box">
              <% if user.pets.present? %>
                <span><img src="assets/pets.jpg" class="info-icon"></span>
                <span class="tooltiptext"><%= pet_names_for_user(user) %></span>
              <% end %>
            </div>
            <div class="data-user-name-box">
              <%= user.first_name + ' ' + user.last_name %>
            </div>
          </li>
          <li class="li-list"><%= user.email %></li>
          <li class="li-list">
            <%= link_to 'View', user_path(user), class: "btn btn-med btn-primary" %>
            <%= link_to 'Edit', edit_user_path(user), class: "btn btn-med btn-primary" %>
            <%= link_to 'Delete', user_path(user), method: :delete,
                data: { confirm: "Are you sure you want to delete this user?" },
                  class: "btn btn-med btn-primary" %>
          </li>
        </ul>
      <% end %>
      <div class="paginate-box">
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>
