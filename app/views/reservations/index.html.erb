<div class="content">
  <h1 align="center">Reservations</h1>
  <div class="data-content">
    <a href="<%= new_reservation_path %>" class="btn btn-lg btn-primary">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      Add Reservation
    </a>
  </div>
  <div class="data-container">
    <% if @reservations.present? %>
      <div class="data-header">
        <ul>
          <li><div class="data-icon"><img src="assets/pets.jpg" id="icon" class="img-circle"></li>
          <li><div class="data-icon"><img src="assets/reservations.jpg" id="icon" class="img-circle"></div></li>
          <li><div class="data-icon"><img src="assets/options.jpg" id="icon" class="img-circle"></div></li>
        </ul>
      </div>
      <div class="data-content">
        <% @sorted_reservations.each do |reservation| %>
          <ul>
            <li><%= reservation.pet_list %></li>
            <li><%= reservation.start_date %></li>
            <li>
              <%= link_to 'View', reservation_path(reservation), class: "btn btn-med btn-primary" %>
              <%= link_to 'Edit', edit_reservation_path(reservation), class: "btn btn-med btn-primary" %>
              <%= link_to 'Cancel', reservation_path(reservation), method: :delete,
                data: { confirm: "Are you sure you want to cancel this reservation?" },
                  class: "btn btn-med btn-primary" %>
            </li>
          </ul>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
