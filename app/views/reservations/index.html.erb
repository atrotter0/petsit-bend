<div class="content">
  <h1 align="center">Reservations</h1>
  <div class="data-content">
    <a href="<%= new_reservation_path %>" class="btn btn-lg btn-primary" title="Add Reservation">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      Add Reservation
    </a>
  </div>
  <div class="data-container">
    <% if current_user.reservations.present? || current_user.admin? %>
      <div class="data-header">
        <ul class="ul-list">
          <li class="li-list"><div class="data-icon"><img src="https://s3.amazonaws.com/petsit-bend/pets.jpg" id="icon" class="img-circle" alt="Pet icon"></div></li>
          <li class="li-list"><div class="data-icon"><img src="https://s3.amazonaws.com/petsit-bend/reservations.jpg" id="icon" class="img-circle" alt="Reservations icon"></div></li>
          <li class="li-list"><div class="data-icon"><img src="https://s3.amazonaws.com/petsit-bend/options.jpg" id="icon" class="img-circle" alt="Options icon"></div></li>
        </ul>
      </div>
      <div class="data-content">
        <% if current_user.admin? %>
          <%= render 'admin/reservations_index.html.erb' %>
        <% else %>
          <% @reservations.each do |reservation| %>
            <ul class="ul-list">
              <li class="li-list">
                <div class="data-date-check-box">
                  <% if petsit_started?(reservation.start_date) && !petsit_finished?(reservation.end_date) %>
                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                    <span class="tooltiptext">In-Progress</span>
                  <% elsif petsit_finished?(reservation.end_date) %>
                    <span class="glyphicon glyphicon-ok" aria-hidden="true" style="color: #0099cc;"></span>
                    <span class="tooltiptext">Complete</span>
                  <% end %>
                </div>
                <div class="data-pet-list-box">
                  <%= reservation.pet_list %>
                </div>
              </li>
              <li class="li-list"><%= "#{reservation.start_date} - #{reservation.end_date}" %></li>
              <li class="li-list">
                <%= link_to 'View', reservation_path(reservation), class: "btn btn-med btn-primary" %>
                <%= link_to 'Edit', edit_reservation_path(reservation), class: "btn btn-med btn-primary" %>
                <%= link_to 'Cancel', reservation_path(reservation), method: :delete,
                  data: { confirm: "Are you sure you want to cancel this reservation?" },
                    class: "btn btn-med btn-primary" %>
              </li>
            </ul>
          <% end %>
        <% end %>
      </div>
    <div class="paginate-box center">
        <%= will_paginate if @reservations.present? %>
    </div>
    <% end %>
  </div>
</div>
