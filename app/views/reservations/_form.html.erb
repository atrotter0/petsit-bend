<%= render 'shared/errors', obj: @reservation %>

  <div class="form-container">
    <div class="row">
      <div class="col-xs-12">
        <%= form_for(@reservation, :html => { class: 'form-horizontal', role: 'form' }) do |f| %>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :pet_list, 'Pets' %>
            </div>
            <div class="col-sm-8">
              <select multiple="multiple" id="pet-list" name="pet_list[]">
                <% @current_user.pets.each do |pet| %>
                  <option><%= pet.name %></option>
                <% end %>
              </select>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :start_date, 'Date From' %>
            </div>
            <div class="col-sm-8">
              <%= f.text_field :start_date, class: 'datepicker', placeholder: "From" %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :end_date, 'Date To' %>
            </div>
            <div class="col-sm-8">
              <%= f.text_field :end_date, class: 'datepicker', placeholder: "To" %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :medications, 'Medications', id: 'checkbox-label' %>
            </div>
            <div class="col-sm-8" id="radio-box">
              <%= f.label :medications, 'Yes' %>
              <%= f.radio_button :medications, 'true' %>
              <%= f.label :medications, 'No' %>
              <%= f.radio_button :medications, 'false'%>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :special_instructions, 'Special Instructions', id: 'instructions-label' %>
            </div>
            <div class="col-sm-8">
              <%= f.text_area :special_instructions, class: 'form-control', placeholder: "Special Instructions", :maxlength => 250, :size => 40 %>
              <div id="instructions-count">0 / 250 characters</div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit(@reservation.new_record? ? "Create Reservation" : "Update Reservation", class: 'btn btn-primary btn-med') %>
              <%= link_to 'Back', reservations_path, class: "btn btn-med btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
